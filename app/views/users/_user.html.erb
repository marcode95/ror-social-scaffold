<li>
  Name: <%= user.name %>
  <span class="profile-link">
    <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
  </span>
  <% if !check_friendship(@friendship, current_user.id, user.id) and !check_friendship(@friendship, user.id, current_user.id) and current_user != user %>
    <%= form_with(:url => friendships_path) do |f| %>
      <%= f.hidden_field :user_id, value: user.id %>
      <%= f.submit "Invite #{user.name}" %>
  <% end %>
<% end %>
  <%= pending_friendship_render(user) %>
</li>



