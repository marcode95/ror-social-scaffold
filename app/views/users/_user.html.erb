<li>
  Name: <%= user.name %>
  <span class="profile-link">
    <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
  </span>
  <% if !find_friendship(@friendship, current_user.id, user.id) and !find_friendship(@friendship, user.id, current_user.id) and current_user != user %>
    <%= form_with(:url => friendships_path) do |f| %>
      <%= f.hidden_field :user_id, value: user.id %>
      <%= f.submit "Invite #{user.name}" %>
  <% end %>
<% end %>
  <% if Friendship.find_by(user_id: user.id, friend_id: current_user.id, confirmed: nil) %>
    <br>
    <p> Friendship requested! Check your profile to react! </p>
  <% end %>
</li>


  <%= #render "invite" %>
