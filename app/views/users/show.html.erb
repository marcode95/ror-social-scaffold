<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>

  <% if current_user != @user && !current_user.friend?(@user) && !current_user.request_sent?(@user) %>
    <%= form_with(:url => friendships_path) do |f| %>
      <%= f.hidden_field :user_id, value: @user.id %>
      <%= f.submit 'Invite to Friendship' %>
    <% end %>
  <% end %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
  <br>
  <% if current_user == @user %> 
    <h3>Pending Requests From:</h3>
    <% @friendship_request.each do |fr| %>
      <% u = User.find_by(id: fr.user_id) %>
      <%= u.name %>
      <%= link_to('Accept Request', add_friend_path(user_id: u.id), method: :put) %>
      <%= link_to('Reject Request', remove_friend_path(friend_id: @user.id), method: :delete) %>
      <br>
    <% end %>
  <% end %>
</section>
